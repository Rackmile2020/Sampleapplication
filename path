interface FullRouteInfo {
  fullPath: string;
  allParams: { [key: string]: any };
}

export function getFullPath(route: ActivatedRoute): FullRouteInfo {
  let allParams: { [key: string]: any } = { ...route.snapshot.params };
  let pathSegments: string[] = route.snapshot.url.map(s => s.path);

  function traverseChildren(r: ActivatedRoute) {
    if (r.firstChild) {
      const child = r.firstChild;
      allParams = { ...allParams, ...child.snapshot.params };
      pathSegments.push(...child.snapshot.url.map(s => s.path));
      traverseChildren(child); // recursive
    }
  }

  traverseChildren(route);

  const fullPath = '/' + pathSegments.join('/');
  return { fullPath, allParams };
}
