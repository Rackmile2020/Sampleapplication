getFullPath(route: ActivatedRoute): any {
  let params = { ...route.snapshot.params };
  let parent = route.parent;

  while (parent) {
    params = { ...parent.snapshot.params, ...params };
    parent = parent.parent;
  }

  return params;
}
  const url = this.route.snapshot.pathFromRoot
    .map(r => r.snapshot.url.map(segment => segment.path).join('/'))
    .join('/');
    
  console.log('Full URL path:', url);
