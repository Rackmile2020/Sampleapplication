function decodeBase64InObject(obj: any): any {
  if (typeof obj === 'string') {
    try {
      return atob(obj); // decode if it's a valid Base64 string
    } catch {
      return obj; // not Base64, leave as-is
    }
  } else if (Array.isArray(obj)) {
    return obj.map(decodeBase64InObject);
  } else if (typeof obj === 'object' && obj !== null) {
    const result: any = {};
    for (const key in obj) {
      if (obj.hasOwnProperty(key)) {
        result[key] = decodeBase64InObject(obj[key]);
      }
    }
    return result;
  }
  return obj; // numbers, booleans, etc.
}
