  const el = this.matchElements[this.currentIndex];
    if (!el) return;

    // Use #search-title as reference
    const header = document.getElementById('search-title');
    const headerHeight = header ? header.offsetHeight : 0;

    const rect = el.getBoundingClientRect();
    const absoluteTop = window.scrollY + rect.top;

    const scrollTarget = absoluteTop - headerHeight - 10;

    window.scrollTo({
      top: scrollTarget,
      behavior: 'smooth'
    });
  }
