{
    path: 'MyCoverage',
    canActivate: [/* your guards if needed */],
    loadChildren: () => {
      const loader = inject(LoadingService);
      const injector = inject(Injector);

      loader.show(); // show spinner before load starts

      return loadRemoteModule({
        type: 'module',
        remoteEntry: environment.mycoverage_remote_entry_url,
        exposedModule: './Module',
      })
        .then(m => {
          loader.hide();
          return m.MyCoverageModule; // must match your actual module class name
        })
        .catch(err => {
          loader.hide();
          console.error('Error loading MyCoverage MFE:', err);
          throw err;
        });
    },
    data: { isMFE: true },
