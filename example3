   return timer(0, 300).pipe( // check every 300ms
      switchMap(() => {
        const data = sessionStorage.getItem('userSession');
        if (data) {
          return of(true); // âœ… session ready
        }
        return of(false);
      }),
      filter(ready => ready), // wait until true
      take(1), // stop once session found
      catchError(() => {
        this.router.navigate(['/login']);
        return of(false);
      })
    );
  }
