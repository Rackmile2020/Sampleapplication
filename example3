remotes: {
  child: `promise new Promise(resolve => {
    const base = window.location.pathname.includes('base') ? '/base' : '';
    const url = window.location.origin + base + '/child/remoteEntry.js';
    const script = document.createElement('script');
    script.src = url;
    script.onload = () => resolve(window.child); // window.child = exposed container
    document.head.appendChild(script);
  })`
}
