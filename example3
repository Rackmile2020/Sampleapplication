 getChildRemoteUrl(): string {
    let remoteUrl = '';

    if (typeof window !== 'undefined' && window.location.href.includes('local')) {
      // Local dev remote
      remoteUrl = 'http://localhost:4201/child/remoteEntry.js';
    } else {
      // Production remote
      const base = typeof window !== 'undefined' && window.location.pathname.includes('base') ? '/base' : '';
      remoteUrl = `${window.location.origin}${base}/child/remoteEntry.js`;
    }

    return remoteUrl;
  }
