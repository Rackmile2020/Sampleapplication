private scrollToError() {
  if (!this.errorSection) return;

  const topOfError = this.errorSection.nativeElement.offsetTop;
  const searchBoxHeight =
    document.getElementById('search-box')?.offsetHeight || 0;

  const scrollTarget = topOfError - searchBoxHeight - 20;

  // Use smooth scroll but without attaching persistent event listeners
  try {
    window.scrollTo({ top: scrollTarget, behavior: 'smooth' });
  } catch {
    // Fallback if smooth scroll causes issues
    window.scrollTo(0, scrollTarget);
  }
}
