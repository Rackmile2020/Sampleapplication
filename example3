addTabsForMember(memberId: number, newTabs: Omit<Tab, 'memberId'>[]) {
  // Check if current tabs belong to the same member
  const currentMemberId = this.tabs.length ? this.tabs[0].memberId : null;

  if (currentMemberId !== memberId) {
    // Member changed â†’ clear old tabs
    this.tabs = [];
  }

  // Add new tabs incrementally without duplicates
  newTabs.forEach(tab => {
    const exists = this.tabs.some(t => t.memberId === memberId && t.label === tab.label);
    if (!exists) {
      this.tabs.push({ ...tab, memberId });
    }
  });
}
