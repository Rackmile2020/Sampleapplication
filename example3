 @ViewChild('errorSection') errorSection!: ElementRef;

  // call this whenever error happens
  scrollToError() {
    if (this.errorSection) {
      const topOfError = this.errorSection.nativeElement.offsetTop;
      const searchBoxHeight = document.getElementById('search-box')?.offsetHeight || 0;

      window.scrollTo({
        top: topOfError - searchBoxHeight - 20, // 20px padding
        behavior: 'smooth'
      });
    }
  }
}
