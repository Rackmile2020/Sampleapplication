  // Add new tabs for a member
  addTabsForMember(memberId: number, newTabs: Omit<Tab, 'memberId'>[]) {
    // Check if tabs already exist for this memberId
    const hasTabsForMember = this.tabs.some(tab => tab.memberId === memberId);

    if (!hasTabsForMember) {
      // Clear old tabs (optional, if you want to remove tabs for other members)
      this.tabs = [];

      // Push new tabs with memberId
      newTabs.forEach(tab => this.tabs.push({ ...tab, memberId }));
    }
    // else: memberId same â†’ do nothing, avoid duplicate push
  }
