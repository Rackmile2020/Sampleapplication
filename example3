export function loadMfeWithSpinner<T>(
  injector: Injector,
  options: { remoteEntry: string; exposedModule: string; moduleName: string }
): Promise<T> {
  const loader = injector.get(LoadingService);
  loader.show();

  return loadRemoteModule({
    type: 'module',
    remoteEntry: options.remoteEntry,
    exposedModule: options.exposedModule,
  })
    .then(m => {
      loader.hide();
      return m[options.moduleName];
    })
    .catch(err => {
      loader.hide();
      console.error('Error loading remote module:', err);
      throw err;
    });
}

 {
    path: 'MyCoverage',
    canMatch: [LobMatchGuard],
    canActivate: [CanActivateService],
    loadChildren: () =>
      loadMfeWithSpinner(inject(Injector), {
        remoteEntry: environment.mycoverage_remote_entry_url,
        exposedModule: './Module',
        moduleName: 'MyCoverageModule',
      }),
    data: { isMFE: true },
  },
