
// Track manual scrolling
hasScrolledManually = false;

ngOnInit() {
  window.addEventListener('scroll', () => {
    this.hasScrolledManually = true;
  });
}

// Scroll function
private scrollToError() {
  if (!this.errorSection) return;

  const errorTop = this.errorSection.nativeElement.offsetTop;
  const searchBoxHeight =
    document.getElementById('search-box')?.offsetHeight || 0;

  window.scrollTo(0, errorTop - searchBoxHeight - 20);
}
