
  @ViewChild('firstEl') firstEl!: ElementRef<HTMLButtonElement>;
  @ViewChild('lastEl') lastEl!: ElementRef<HTMLButtonElement>;

  ngAfterViewInit() {
    // Optional: focus first element when dialog opens
    this.firstEl.nativeElement.focus();
  }

  focusLast() {
    this.lastEl.nativeElement.focus();
  }

  focusFirst() {
    this.firstEl.nativeElement.focus();
  }
}
